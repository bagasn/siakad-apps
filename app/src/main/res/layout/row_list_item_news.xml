<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        app:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_empty" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/image_icon"
                android:layout_toEndOf="@id/image_icon"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:text="Judul nya news"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@id/image_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="4dp"
                android:background="@null"
                android:src="@drawable/ic_keyboard_arrow_right_primary" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>